{
    "name": "jayesh/laravel-gemini-translator",
    "description": "An interactive command to extract and generate Laravel translations using Gemini AI.",
    "type": "laravel-package",
    "license": "MIT",
    "keywords": [
        "laravel",
        "laravel-package",
        "translation",
        "translation-generator",
        "translation-extractor",
        "laravel-translator",
        "laravel-localization",
        "laravel-ai",
        "i18n",
        "multilingual",
        "localization",
        "language-files",
        "ai-translator",
        "ai-tools",
        "google-gemini",
        "gemini-ai",
        "artisan-command",
        "composer-package",
        "developer-tools",
        "automation",
        "php"
    ],
    "homepage": "https://github.com/jayeshmepani/laravel-gemini-translator",
    "readme": "README.md",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Jayesh Patel",
            "email": "jayeshmepani777@gmail.com",
            "homepage": "https://github.com/jayeshmepani"
        }
    ],
    "support": {
        "issues": "https://github.com/jayeshmepani/laravel-gemini-translator/issues",
        "source": "https://github.com/jayeshmepani/laravel-gemini-translator",
        "docs": "https://jayeshmepani.github.io/laravel-gemini-translator/"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/jayeshmepani"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0 || ^12.0",
        "google-gemini-php/laravel": "^2.0",
        "spatie/fork": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Jayesh\\LaravelGeminiTranslator\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jayesh\\LaravelGeminiTranslator\\TranslationServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}